modules = ["python-3.11", "web", "nodejs-20", "nix"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Production Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Repository Analysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "repo_analysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GO Transit Display"

[[workflows.workflow]]
name = "Repository Analysis"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python analyze_repo.py"

[[workflows.workflow]]
name = "repo_analysis"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python analyze_repo.py"

[[workflows.workflow]]
name = "GO Transit Display"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Flask App"
author = 40562328
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Dev Server"
author = 40568190
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py --debug"

[[workflows.workflow]]
name = "GO Transit Server"
author = 40570952
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Production Server"
author = 40580720
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py --production"

[deployment]
run = ["sh", "-c", "python analyze_repo.py"]

[[ports]]
localPort = 5000
externalPort = 80
